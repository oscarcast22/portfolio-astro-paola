---
import Icon from './Icon.astro';
import TextIcon from './TextIcon.astro';
---

<section class="box">
	<div class="skill">
		<div class="passions">
			<Icon icon="passionsIcon" color="var(--accent-regular)" size="7rem" gradient />
		</div>
		<TextIcon icon='skillText1' color="var(--accent-regular)" width="8rem" height='1.4rem' gradient />
	</div>
	<div class="skill">
		<Icon icon="brainStorming" color="var(--accent-regular)" size="7rem" gradient />
		<TextIcon icon='skillText2' color="var(--accent-regular)" width="8rem" height='2.4rem' gradient />
	</div>
	<div class="skill">
		<Icon icon="direccionArtistica" color="var(--accent-regular)" size="7rem" gradient />
		<TextIcon icon='skillText3' color="var(--accent-regular)" width="8rem" height='2.1rem' gradient />
	</div>
	<div class="skill">
		<Icon icon="branding" color="var(--accent-regular)" size="7rem" gradient />
		<TextIcon icon='skillText4' color="var(--accent-regular)" width="8rem" height='1.3rem' gradient />
	</div>
	<div class="skill">
		<Icon icon="dibujoDigital" color="var(--accent-regular)" size="7rem" gradient />
		<TextIcon icon='skillText5' color="var(--accent-regular)" width="8rem" height='2.3rem' gradient />
	</div>
</section>

<style>
	.box {
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		min-width: 90%;
		margin: auto;
		padding: 1.5rem 1.2rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
		display: flex;
		justify-content: space-between;
	}

	.skill {
		display: flex;
		flex-direction: column;
		gap: 10px;

	}

	.skill h2 {
		color: var(--accent-regular);
	}

	@media (max-width: 870px) {
		.box {
			flex-direction: column;
			gap: 25px;
		}

		.skill {
			flex-direction: row;
			margin: auto;
			gap: 20px;
			align-items: center;
		}

		.passions {
			transform: rotate(60deg);
		}
	}
</style>
